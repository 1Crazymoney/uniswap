{
  "name": "solidity-typescript-boilerplate",
  "version": "0.0.3",
  "scripts": {
    "generate": "truffle compile && typechain --target truffle './build/**/*.json'",
    "coverage": "yarn run generate && solidity-coverage",
    "test": "yarn run generate && truffle test",
    "bindings:ts": "truffle compile && typechain --target web3-1.0.0 './build/**/*.json'",
    "bindings:go": "solc --allow-paths . --combined-json bin,abi,userdoc,devdoc,metadata $(find contracts -type f -name '*.sol') | abigen -pkg bindings --out bindings.go --abi -",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "deploy": "truffle migrate --skipDryRun --network $NETWORK",
    "verify": "truffle run verify --network $NETWORK",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "openzeppelin-solidity": "2.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.3",
    "any-promise": "^1.3.0",
    "bignumber.js": "^9.0.0",
    "bn.js": "^4.11.8",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "git://github.com/negaex/chai-bignumber.git#master",
    "coveralls": "^3.0.3",
    "dotenv": "^8.0.0",
    "eth-gas-reporter": "^0.2.0",
    "ganache-cli": "^6.4.3",
    "patch-package": "^6.1.2",
    "solc": "^0.5.8",
    "solidity-coverage": "^0.6.0-beta.5",
    "truffle": "^5.0.19",
    "truffle-hdwallet-provider": "^1.0.7",
    "truffle-plugin-verify": "^0.2.0-alpha2",
    "truffle-typings": "^1.0.6",
    "ts-generator": "^0.0.8",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "typechain": "^0.3.14",
    "typescript": "^3.4.5",
    "web3": "^1.0.0-beta.52"
  },
  "resolutions": {
    "solc": "^0.5.8"
  }
}
