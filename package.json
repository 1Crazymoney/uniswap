{
  "name": "solidity-typescript-boilerplate",
  "version": "0.0.3",
  "scripts": {
    "generate": "truffle compile && typechain --target truffle './build/**/*.json'",
    "coverage": "yarn run generate && solidity-coverage",
    "test": "yarn run generate && truffle test",
    "bindings:ts": "truffle compile && typechain --target web3-1.0.0 './build/**/*.json'",
    "bindings:go": "solc --allow-paths . --combined-json bin,abi,userdoc,devdoc,metadata $(find contracts -type f -name '*.sol') | abigen -pkg bindings --out bindings.go --abi -",
    "deployToKovan": "truffle migrate --network kovan && $npm_execpath run merge .merged/kovan",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "openzeppelin-solidity": "2.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.7",
    "any-promise": "^1.3.0",
    "bignumber.js": "^8.1.1",
    "bn.js": "^4.11.8",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "git://github.com/negaex/chai-bignumber.git#master",
    "coveralls": "^3.0.3",
    "dotenv": "^7.0.0",
    "eth-gas-reporter": "^0.1.12",
    "ganache-cli": "^6.4.3",
    "patch-package": "^6.1.2",
    "sol-merger": "^0.1.3",
    "solc": "^0.5.9",
    "solidity-coverage": "github:rotcivegaf/solidity-coverage#5875f5b7bc74d447f3312c9c0e9fc7814b482477",
    "truffle": "^5.0.19",
    "truffle-hdwallet-provider": "^1.0.7",
    "truffle-typings": "^1.0.6",
    "ts-generator": "^0.0.8",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "typechain": "^0.3.14",
    "typescript": "^3.4.5",
    "web3": "^1.0.0-beta.35"
  },
  "resolutions": {
    "solc": "^0.5.9",
    "solidity-coverage": "github:rotcivegaf/solidity-coverage#5875f5b7bc74d447f3312c9c0e9fc7814b482477"
  }
}
